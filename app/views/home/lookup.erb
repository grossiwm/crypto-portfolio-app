<br><br>
<h1>Coin look up</h1>

<%= form_tag home_lookup_path, :method => 'POST' do %>
    <%= text_field_tag 'sym', nil, placeholder: 'Coin symbol here', size: 50%>
    <%= submit_tag 'Lookup'%>
<%end%>

<br><br>

<% if @symbol %>
    <% for table in @coins %>
        <% if table['symbol'] == @symbol %>
        <div class="card bg-light mb-3" style="width: 40rem;">
            <ul class="list-group">
                <% table.each do |key, arr| %>
                <li class = "list-group-item"> <strong> <%= key %></strong> : <%= arr %> </li>
                <%end%>
            <% end %>
            </ul>
        </div>
    <% end %>
<% else %>
    <div class="alert alert-warning" role="alert">
        <p>You forgot to type the currency symbol!</p>
    </div>
<%end%>
